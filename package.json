{
    "name": "pure-react-ssr-hmr",
    "version": "1.0.0",
    "description": "Pure React SSR template with Hot Module Replacement",
    "main": "build/server.js",
    "scripts": {
        "start": "node ./scripts/start",
        "build": "shx rm -rf ./build/**/* && concurrently \"npm run build:server\" \"npm run build:client\"",
        "build:server": "webpack --config ./webpack/server/webpack.prod.js",
        "build:client": "webpack --config ./webpack/client/webpack.prod.js",
        "lint": "eslint ./src",
        "lint:fix": "eslint --fix ./src"
    },
    "keywords": [
        "react",
        "server-side-rendering",
        "ssr",
        "express",
        "hot-module-replacement",
        "hmr"
    ],
    "author": {
        "name": "Jonathan Mataloni",
        "email": "jo.mataloni@gmail.com",
        "url": "https://github.com/jonamat"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jonamat/pure-react-ssr-hmr"
    },
    "license": "MIT",
